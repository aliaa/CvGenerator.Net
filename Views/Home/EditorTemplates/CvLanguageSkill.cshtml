@model CvGenerator.Models.CvLanguageSkill

<div class="col-md-3">
    <div class="m-1 p-2 border border-secondary bg-light">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            @{
                var dropdownItems = Enum.GetNames(typeof(CvLanguageSkill.Proficiency))
                    .Select(p => new SelectListItem(EnumHelper<CvLanguageSkill.Proficiency>.GetDisplayName(p), p.ToString()));
            }
            <label asp-for="Level" class="control-label"></label>
            @Html.DropDownListFor(m => m.Level, dropdownItems, htmlAttributes: new { @class = "form-control" })
        </div>
    </div>
</div>