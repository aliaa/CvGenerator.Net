@model CvGenerator.Models.CvSkillSet

<div class="col-md-6">
    <div class="m-1 p-2 border border-secondary bg-light">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="CategoryName" class="control-label"></label>
            <input asp-for="CategoryName" class="form-control" />
            <span asp-validation-for="CategoryName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="SkillsInAString" class="control-label"></label>
            <small class="text-secondary ml-4">(Separate by a comma ",")</small>
            <div>
                <input asp-for="SkillsInAString" class="form-control" data-role="tagsinput" />
            </div>
            <span asp-validation-for="SkillsInAString" class="text-danger"></span>
        </div>
    </div>
</div>